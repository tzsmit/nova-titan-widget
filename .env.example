# Nova Titan Widget - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ========================================
# GENERAL
# ========================================
NODE_ENV=development

# ========================================
# BACKEND API CONFIGURATION
# ========================================

# Server Configuration
PORT=3000
HOST=localhost

# API Keys
ODDS_API_KEY=your_odds_api_key_here
ESPN_API_KEY=your_espn_api_key_here

# ========================================
# DATABASE & CACHE
# ========================================

# Upstash Redis (Serverless)
UPSTASH_REDIS_URL=redis://your-redis-url.upstash.io:6379
UPSTASH_REDIS_TOKEN=your_redis_token_here

# Cache TTL (seconds)
CACHE_TTL_ODDS=60
CACHE_TTL_GAMES=300
CACHE_TTL_PLAYER_STATS=600

# ========================================
# SECURITY
# ========================================

# HMAC Request Signing
HMAC_SECRET=your_32_character_hmac_secret_here_change_this_in_production

# CSRF Protection
CSRF_SECRET=your_32_character_csrf_secret_here_change_this_in_production

# JWT (if using authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ========================================
# MONITORING & LOGGING
# ========================================

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=info

# ========================================
# FRONTEND CONFIGURATION (Vite)
# ========================================

# API Base URL
VITE_API_BASE_URL=http://localhost:3000/api

# API Keys (if needed in frontend)
VITE_ODDS_API_KEY=your_odds_api_key_here

# Sentry (Frontend)
VITE_SENTRY_DSN=https://your-frontend-sentry-dsn@sentry.io/project-id

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_GEOLOCATION=true

# ========================================
# THIRD-PARTY INTEGRATIONS
# ========================================

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ========================================
# DEPLOYMENT
# ========================================

# Vercel
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_org_id
VERCEL_PROJECT_ID=your_project_id

# Domain
DOMAIN=nova-titan-widget.vercel.app

# ========================================
# DEVELOPMENT ONLY
# ========================================

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Mock Data (Development)
USE_MOCK_DATA=false
MOCK_API_DELAY=500

# ========================================
# NOTES
# ========================================

# 1. NEVER commit .env.local or .env.production to version control
# 2. All secrets should be 32+ characters and cryptographically random
# 3. Rotate secrets regularly in production
# 4. Use different secrets for each environment
# 5. Store production secrets in Vercel dashboard, not in files
# 6. Enable MFA on all third-party service accounts

# Generate secure secrets with:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
