# Nova Titan Backend Configuration

# Server
NODE_ENV=development
PORT=3001
HOST=localhost
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL=sqlite:./data/dev.db
# DATABASE_URL=postgresql://username:password@localhost:5432/nova_titan

# Redis Cache
REDIS_URL=redis://localhost:6379
ENABLE_REDIS=true

# ML Service
ML_SERVICE_URL=http://localhost:3002
ENABLE_ML_PREDICTIONS=true

# External APIs
ODDS_API_KEY=your_odds_api_key
ODDS_API_URL=https://api.the-odds-api.com/v4
SPORT_DATA_API_KEY=your_sportdata_key
ENABLE_REAL_DATA=false

# Security
JWT_SECRET=your_super_secret_jwt_key_here
BCRYPT_ROUNDS=12
API_RATE_LIMIT=100

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Features
MINIMUM_AGE=18
BLOCKED_COUNTRIES=US-UT,US-ID
ENABLE_AFFILIATE_LINKS=false

# Cache TTL (seconds)
CACHE_TTL_ODDS=300
CACHE_TTL_PREDICTIONS=600
CACHE_TTL_GAMES=1800
CACHE_TTL_PLAYER_STATS=3600