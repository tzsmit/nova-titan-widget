# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# The Odds API (REQUIRED)
# Get your free API key at https://the-odds-api.com/
ODDS_API_KEY=your_odds_api_key_here
ODDS_API_BASE_URL=https://api.the-odds-api.com/v4

# ESPN API (Optional)
ESPN_API_KEY=

# Upstash Redis (REQUIRED)
# Get free account at https://upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Cache Configuration
CACHE_DEFAULT_TTL=60
CACHE_ENABLED=true

# CORS Configuration
CORS_ORIGIN=https://novatitan.net

# Security
HMAC_SECRET=your_hmac_secret_here_change_in_production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# Logging
LOG_LEVEL=info

# Database (Prisma - if using)
DATABASE_URL="postgresql://user:password@localhost:5432/novatitan?schema=public"
