# Nova Titan ML Service Configuration

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=/app/models
DATA_PATH=/app/data
MODEL_VERSION=1.0.0
AUTO_RETRAIN=false
RETRAIN_SCHEDULE="0 2 * * 1"  # Weekly on Monday at 2 AM

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=1000
PREDICTION_TIMEOUT=30
CACHE_TTL=3600

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=nova_titan_ml
ENABLE_CACHE=true

# Model Parameters
LIGHTGBM_PARAMS={
  "objective": "binary",
  "metric": "binary_logloss",
  "boosting_type": "gbdt",
  "num_leaves": 31,
  "learning_rate": 0.05,
  "feature_fraction": 0.9,
  "bagging_fraction": 0.8,
  "bagging_freq": 5,
  "verbose": -1
}

# Feature Engineering
ENABLE_FEATURE_SELECTION=true
MAX_FEATURES=50
MIN_FEATURE_IMPORTANCE=0.01

# Model Monitoring
ENABLE_DRIFT_DETECTION=true
DRIFT_THRESHOLD=0.1
PERFORMANCE_THRESHOLD=0.6

# Data Sources
SPORTS_DATA_API_URL=http://localhost:3001/api
ENABLE_REAL_DATA=false

# Logging
LOG_FILE=/app/logs/ml_service.log
ENABLE_MODEL_LOGGING=true
LOG_PREDICTIONS=false  # Set to true for debugging (privacy concerns)